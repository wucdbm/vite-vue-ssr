{
    "name": "wucdbm-vite-vue-ssr",
    "private": false,
    "description": "Vue/Vite utility for building your app and running SSR in DEV",
    "version": "1.0.4",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "wucdbm-vite-vue-ssr": "dist/cli/index.js"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "vite",
        "preview": "vite preview",
        "build": "yarn build:lib && yarn build:cli",
        "build:lib": "tsc --p ./tsconfig-build.json && vite build",
        "build:cli": "tsc --p ./tsconfig-build.json && vite build --config vite-cli.config.ts --ssr",
        "prepublishOnly": "npm run build",
        "lint": "eslint .",
        "format": "prettier --write .",
        "prepare": "husky install"
    },
    "peerDependencies": {
        "@rollup/plugin-replace": "^5.0.5",
        "@unhead/ssr": "^1.8.10",
        "@unhead/vue": "^1.8.10",
        "@vueuse/head": "^2.0.0",
        "chalk": "^5.3.0",
        "connect": "^3.7.0",
        "vite": "^5.0.12",
        "vue": "^3.4.15",
        "vue-router": "^4.2.5"
    },
    "peerDependenciesMeta": {
        "@vueuse/head": {
            "optional": true
        },
        "vue": {
            "optional": true
        },
        "vue-router": {
            "optional": true
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^18.5.0",
        "@commitlint/config-conventional": "^18.5.0",
        "@rollup/plugin-replace": "^5.0.5",
        "@types/connect": "^3.4.38",
        "@types/jsdom": "^21.1.6",
        "@types/node": "^20.11.6",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "connect": "^3.7.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^8.0.3",
        "jsdom": "^24.0.0",
        "lint-staged": "^15.2.0",
        "prettier": "^3.2.4",
        "typescript": "^5.2.2",
        "vite": "^5.0.12",
        "vite-plugin-dts": "^3.7.2"
    },
    "dependencies": {
        "vue": "^3.4.15",
        "vue-router": "^4.2.5",
        "@unhead/ssr": "^1.8.10",
        "@unhead/vue": "^1.8.10"
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": [
            "eslint --fix"
        ],
        "**/*": "prettier --write --ignore-unknown"
    }
}
